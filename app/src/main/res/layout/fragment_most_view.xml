<?xml version="1.0" encoding="utf-8"?>
<com.baoyz.widget.PullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/rl_most_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_oops"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_oops"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/tl_tab"
        android:layout_above="@id/navigation"
        android:padding = "16dp"
        android:id="@+id/rv_food"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="true"/>
</RelativeLayout>

</com.baoyz.widget.PullRefreshLayout>